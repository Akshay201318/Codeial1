
<h1><%=title%></h1>

<!--Creating posts section-->

<section id="posts">
        <h4>Posts</h4>
        <% if(locals.user){%>
        <form action="/posts/create" method="post">
                <textarea id="post-content" name= "content"cols="30" row="20" placeholder="Type here...."></textarea>
                <button type="submit" id="post">Post</button>
        </form>
        <%} %>

        <div id="all-posts">
        
                <ul>
                        <%for(post of posts){%>

                                <li>
                                        <p>
                                                <%= post.content%>
                                                <%= post.user.email%>
                                        </p>
                                        <div id="add-comment">

                                                <% if(locals.user){%>
                                                        <form action="/comments/create" method="post">
                                                                <input id="comment-content" name= "content"  placeholder="Type here....">
                                                                <input type="hidden" name="post" value="<%= post._id%>">
                                                                <button type="submit" id="post">Add Comment</button>
                                                        </form>
                                                <%} %>

                                                <div class="post-comments">
                                                        <ul id="post-comment-<%= post._id%>">

                                                                <% for(comment of post.comment){%>

                                                                    <p>
                                                                            <%=comment.content%>
                                                                    </p>
                                                                     <small><%= comment.user.name %></small>
                                                                <%}%>

                                                        </ul>

                                                </div>

                                        </div>
                                        
                                </li>
                                <%}%>
                </ul>

        </div>
</section>
